---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Introduction from "../components/Introduction.astro";
import Content from "../components/Content.astro";
import "../styles/global.css";

import { getCollection } from "astro:content";

const links = await getCollection("links", ({ data }) => data.published !== false);
const posts = await getCollection("posts", ({ data }) => data.published !== false);
---

<html lang="en">
  <head>
    <BaseHead />
  </head>

  <body>
    <main class="main-shell">
      <Introduction />

      <section class="links-stack" aria-label="Main links">
        <Content links={links} />
      </section>

      <Footer class="treelink-footer" />
    </main>
  </body>
</html>
