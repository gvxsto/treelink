---
import { Icon } from "astro-icon/components";

const { icon, url } = Astro.props;
---

<li>
  <a
    href={url}
    aria-label={icon}
    class="flex h-12 w-12 items-center justify-center rounded-full bg-[#f5f5dc] ring-[3px] ring-[#2d3b1f] transition-all duration-200 hover:scale-110 hover:bg-white button-shadow-small"
  >
    <Icon
      name={icon}
      class="size-6 text-[#2d3b1f]"
    />
  </a>
</li>
