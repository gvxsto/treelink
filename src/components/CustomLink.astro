---
import type { CollectionEntry } from "astro:content";

type Props = {
  entry: CollectionEntry<"links">;
};

const { data } = Astro.props.entry;
const href = data.href;
const label = data.title ?? data.href;
const icon = data.icon ?? "";
const meta = data.meta ?? "";
---

<a class="link-pill" href={href} target="_blank" rel="noopener noreferrer">
  <span class="link-pill-content">
    {icon && (
      <span class="link-pill-icon" aria-hidden="true">
        {icon}
      </span>
    )}
    <span class="link-pill-label">{label}</span>
  </span>

  <span class="link-pill-meta">
    {meta ? meta : "···"}
  </span>
</a>
