---
import { Image } from "astro:assets";

import { SITE } from "@/siteConfig";

import profilePicture from "@/assets/profile-picture.jpg";
---

<div class="py-8">
  <!-- Profile Picture -->
  <div class="relative mx-auto w-fit">
    <Image
      src={profilePicture}
      alt={SITE.name}
      height={256}
      width={256}
      loading="eager"
      draggable="false"
      class="mx-auto size-32 rounded-full"
    />
  </div>
  
  <!-- Name/Brand - If you have a logo image, replace h1 with Image component -->
  <h1 class="mt-4 text-center text-3xl font-bold tracking-tight text-[#2d3b1f]" style="text-shadow: 3px 3px 0px rgba(255,255,255,0.3);">
    {SITE.name}
  </h1>
  
  <!-- Verified Badge (Optional - add checkmark emoji or remove) -->
  <div class="mt-1 flex justify-center">
    <span class="text-2xl">âœ“</span>
  </div>
  
  <!-- Bio/Tagline -->
  <p
    class="mt-3 px-8 text-center text-[15px] font-medium text-[#2d3b1f]"
    style="line-height: 1.5;"
  >
    {SITE.bio}
  </p>
</div>
